<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JJAENT3.Vistas.Login"
             Title="Login">
    <StackLayout Padding="20">
        <Label Text="Login" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10"/>
        <Entry x:Name="usernameEntry" Placeholder="Usuario" Margin="0,0,0,10"/>
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" Margin="0,0,0,10"/>
        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked"/>
    </StackLayout>
</ContentPage>